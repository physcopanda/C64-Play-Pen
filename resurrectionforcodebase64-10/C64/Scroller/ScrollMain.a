}
	ldx #0
.cs1
	; Fill the score panel screen line with the equivalent of <space>
	ldx #39
	lda #32
.colf1
	sta SCREENRAM+19*40,x
	dex
	bpl .colf1

!ifdef Scroller_MultiDirection {
